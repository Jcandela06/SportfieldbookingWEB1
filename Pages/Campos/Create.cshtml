@page
@model SportfieldbookingWEB1.Pages.Campos.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Campo</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Campo.Nombre" class="control-label"></label>
				<input asp-for="Campo.Nombre" class="form-control" />
				<span asp-validation-for="Campo.Nombre" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Campo.Tipo" class="control-label"></label>
				<input asp-for="Campo.Tipo" class="form-control" />
				<span asp-validation-for="Campo.Tipo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Campo.Ubicacion" class="control-label"></label>
				<input asp-for="Campo.Ubicacion" class="form-control" />
				<span asp-validation-for="Campo.Ubicacion" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Campo.TarifaHora" class="control-label"></label>
				<input asp-for="Campo.TarifaHora" class="form-control" />
				<span asp-validation-for="Campo.TarifaHora" class="text-danger"></span>
			</div>
			<div class="form-group mt-3">
				<input type="submit" value="Create" class="btn-success" />
				<a asp-page="Index" class="btn btn-primary">Back to List</a>
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
